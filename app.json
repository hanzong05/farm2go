{
  "expo": {
    "name": "Farm2Go",
    "slug": "farm2go",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "farm2go",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "owner": "hanz-pillerva",
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.hanzpillerva.farm2go",
      "infoPlist": {
        "NSCameraUsageDescription": "This app uses the camera to take photos for identity verification.",
        "NSPhotoLibraryUsageDescription": "This app accesses the photo library to select images for identity verification.",
        "NSLocationWhenInUseUsageDescription": "This app uses your location to show directions to delivery addresses."
      },
      "config": {
        "googleMapsApiKey": "AIzaSyA0M90dM91dZlLGAdCxMmeQggwGLOoWSyE"
      }
    },
    "android": {
      "package": "com.hanzpillerva.farm2go",
      "versionCode": 1,
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/icon.png",
        "backgroundColor": "#059669"
      },
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false,
      "permissions": [
        "CAMERA",
        "READ_EXTERNAL_STORAGE",
        "WRITE_EXTERNAL_STORAGE",
        "RECORD_AUDIO",
        "ACCESS_COARSE_LOCATION",
        "ACCESS_FINE_LOCATION"
      ],
      "intentFilters": [
        {
          "action": "VIEW",
          "autoVerify": true,
          "data": [
            {
              "scheme": "farm2go",
              "host": "*"
            }
          ],
          "category": [
            "BROWSABLE",
            "DEFAULT"
          ]
        }
      ],
      "config": {
        "googleMaps": {
          "apiKey": "AIzaSyA0M90dM91dZlLGAdCxMmeQggwGLOoWSyE"
        }
      }
    },
    "web": {
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splash-icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#ffffff",
          "dark": {
            "backgroundColor": "#000000"
          }
        }
      ],
      [
        "expo-image-picker",
        {
          "photosPermission": "The app accesses your photos to let you select images for identity verification.",
          "cameraPermission": "The app accesses your camera to let you take photos for identity verification."
        }
      ],
      [
        "react-native-vision-camera",
        {
          "cameraPermissionText": "This app uses the camera to capture photos and videos for identity verification.",
          "enableMicrophonePermission": false,
          "enableCodeScanner": true
        }
      ],
      [
        "react-native-maps",
        {
          "googleMapsApiKey": "AIzaSyA0M90dM91dZlLGAdCxMmeQggwGLOoWSyE"
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true,
      "reactCompiler": true
    }
  }
}